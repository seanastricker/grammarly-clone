rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read or update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // A user can create their own profile, ensuring the document ID matches their UID.
      allow create: if request.auth != null && request.resource.id == request.auth.uid;
    }

    // Rules for user-owned documents
    match /documents/{userId}/{document=**} {
        // Allow users to perform any action on their own documents.
        allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
} 